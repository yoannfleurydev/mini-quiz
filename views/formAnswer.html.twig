{% extends "layout.html.twig" %}

{% block content %}
    {% if error is defined %}
        <div class="row">
            <div class="col offset-l2 m8 s12 center">
                <div class="card hoverable red darken-1 white-text">
                    <div class="card-content">
                        <p>
                            {{ error }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col offset-l2 m8 s12 center">
            <div class="card hoverable">
                <div class="card-content">
                    <span class="card-title">Ajouter une question</span>
                    <form role="form" action="#" method="post">
                        <div class="input-field">
                            <label for="question_text">Description de la question</label>
                            <textarea id="question_text" name="question_text" class="materialize-textarea"></textarea>
                        </div>
                        <div class="input-field">
                            <label for="answer1_content">Réponse 1</label>
                            <textarea id="answer1_content" name="answer1_content" class="materialize-textarea"></textarea>
                        </div>
                        <div class="input-field">
                            <label for="answer2_content">Réponse 2</label>
                            <textarea id="answer2_content" name="answer2_content" class="materialize-textarea"></textarea>
                        </div>
                        <div class="input-field">
                            <label for="answer3_content">Réponse 3</label>
                            <textarea id="answer3_content" name="answer3_content" class="materialize-textarea"></textarea>
                        </div>
                        <div class="input-field">
                            <label for="answer4_content">Réponse 4</label>
                            <textarea id="answer4_content" name="answer4_content" class="materialize-textarea"></textarea>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn waves-effect light-effect">Ajouter question</button>
                            <button type="submit" class="btn waves-effect light-effect">Terminez</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}