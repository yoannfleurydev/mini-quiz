{% extends "layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-offset-2 col-sm-8 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Ajouter une question</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="#" method="post">
                        <div class="form-group">
                            <label for="question_text">Question</label>
                            <textarea class="form-control" id="question_text" name="question_text" class="materialize-textarea"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="answer1_content">Réponse 1</label>
                            <textarea class="form-control" id="answer1_content" name="answer1_content" class="materialize-textarea"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="answer2_content">Réponse 2</label>
                            <textarea class="form-control" id="answer2_content" name="answer2_content" class="materialize-textarea"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="answer3_content">Réponse 3</label>
                            <textarea class="form-control" id="answer3_content" name="answer3_content" class="materialize-textarea"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="answer4_content">Réponse 4</label>
                            <textarea class="form-control" id="answer4_content" name="answer4_content" class="materialize-textarea"></textarea>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-default">Ajouter question</button>
                            <button type="submit" class="btn btn-default">Terminez</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}