<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Mini-Quiz</title>
        <link type="text/css" href="{{ app.request.basepath }}/css/materialize.css" rel="stylesheet" media="screen" title="Materialize">
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <script type="text/javascript" src="{{ app.request.basepath }}/js/jquery-2.1.4.min.js"></script>
        <script type="text/javascript" src="{{ app.request.basepath }}/js/materialize.min.js"></script>
    </head>
    <body>
        <nav>
            <div class="nav-wrapper">
                <a href="{{ path('home') }}" class="brand-logo">Mini-Quiz</a>
                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                <a href="{{ path('home') }}" class="brand-logo">Mini-Quiz</a>

                {% if app.session.get("connected") %}
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="{{ path('user', {'id': app.session.get("user").userId}) }}">{{ app.session.get("user").userLogin }}</a></li>
                    <li><a href="{{ path('logout') }}">Déconnexion</a></li>
                </ul>
                <ul class="side-nav" id="mobile-demo">
                    <li><a href="{{ path('logout') }}">Déconnexion</a></li>
                </ul>
                {% else %}
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="{{ path('login') }}">Connexion</a></li>
                    <li><a href="{{ path('signup') }}">Inscription</a></li>
                </ul>
                <ul class="side-nav" id="mobile-demo">
                    <li><a href="{{ path('login') }}">Connexion</a></li>
                    <li><a href="{{ path('signup') }}">Inscription</a></li>
                </ul>
                {% endif %}
            </div>
        </nav>
        <div class="container">
            {% block content %}

            {% endblock %}
        </div>
        <footer class="footer">
        </footer>
        <script>
            $(".button-collapse").sideNav();
        </script>
    </body>
</html>