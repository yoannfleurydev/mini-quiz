<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini-Quiz</title>
    <link type="text/css" href="{{ app.request.basepath }}/css/bootstrap.css" rel="stylesheet" media="screen"
          title="Bootstrap">
    <link type="text/css" href="{{ app.request.basepath }}/css/style.css" rel="stylesheet" media="screen"
          title="">
    <script type="text/javascript" src="{{ app.request.basepath }}/js/jquery-2.1.4.min.js"></script>
    <script type="text/javascript" src="{{ app.request.basepath }}/js/bootstrap.js"></script>
    <script type="text/javascript" src="{{ app.request.basepath }}/js/global.js"></script>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">Mini-Quiz</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                {% if app.session.get("connected") %}
                    <li><a href="{{ path('newquiz') }}" title="Nouveau quiz">Nouveau quiz</a></li>
                {% endif %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">
                        {% if app.session.get("connected") %}
                            {{ app.session.get("user").userlogin }}
                        {% else %}
                            Non connecté
                        {% endif %}
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        {% if app.session.get("connected") %}
                            <li><a href="{{ path('user', {'id': app.session.get("user").userId}) }}"
                                   title="Accéder à mon profil">
                                    Mon profil</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path('logout') }}" title="Se déconnecter">Déconnexion</a></li>

                        {% else %}
                            <li><a href="{{ path('login') }}" title="Se connecter">Connexion</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path('signup') }}" title="S'inscrire">Inscription</a></li>
                        {% endif %}
                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="container">
    {% if error is defined %}
        <div id="error" class="row">
            <div class="col-lg-offset-2 col-sm-8 col-xs-12">
                <div class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    {{ error }}
                </div>
            </div>
        </div>
    {% endif %}
    {% for message in app.session.getFlashBag.get('message') %}
        <div id="error" class="row">
            <div class="col-lg-offset-2 col-sm-8 col-xs-12">
                <div class="alert alert-{{ message.type }}" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    {{ message.content }}
                </div>
            </div>
        </div>
    {% endfor %}
    {% block content %}

    {% endblock %}
</div>
<footer class="footer">
    <div class="container">
        <p><a href="https://github.com/yoannfleurydev/mini-quiz" class="btn btn-default">Sources</a></p>
    </div>
</footer>
</body>
</html>