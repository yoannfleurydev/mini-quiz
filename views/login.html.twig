{% extends "layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col s12 m9 offset-m1 l8 offset-l2">
            <div class="card hoverable">
                <div class="card-content">
                    <span class="card-title">Connexion</span>
                    <form>
                        <div class="input-field">
                            <label for="pseudo">Pseudo</label>
                            <input name="pseudo" type="text">
                        </div>
                        <div class="input-field">
                            <label for="password">Mot de passe</label>
                            <input name="password" type="password">
                        </div>
                        <div class="card-action">
                            <button type="reset" class="btn waves-effect light-effect">Effacez</button>
                            <button type="submit" class="btn waves-effect light-effect">Validez</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}